<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFEE">

    <RelativeLayout
        android:id="@+id/rl_tree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#FFFFEE">

        <ImageView
            android:id="@+id/iv_tree"
            android:layout_width="@dimen/p_300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/p_10dp"
            android:visibility="visible" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_heart"
        android:layout_width="@dimen/p_50dp"
        android:layout_height="@dimen/p_50dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/p_90dp"
        android:src="@drawable/heart"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="@dimen/p_350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/p_30dp"
        android:layout_marginTop="@dimen/p_20dp"
        android:layout_marginEnd="@dimen/p_20dp">

        <TextView
            android:id="@+id/tv_to"
            android:layout_width="@dimen/p_350dp"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:textColor="#000"
            android:textSize="@dimen/p_8sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/tv_context"
            android:layout_width="@dimen/p_300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_to"
            android:layout_marginTop="@dimen/p_10dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="#000"
            android:textSize="@dimen/p_6sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/tv_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_context"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/p_5dp"
            android:layout_marginEnd="@dimen/p_5dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="#000"
            android:textSize="@dimen/p_6sp"
            android:textStyle="bold|italic" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/p_30dp"
        android:layout_marginTop="@dimen/m_65dp"
        android:lineSpacingMultiplier="1.2"
        android:textColor="#000"
        android:textSize="@dimen/p_15sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/p_20dp"
        android:layout_alignParentBottom="true"
        android:background="#0000"
        android:orientation="horizontal"
        android:visibility="visible">

        <View
            android:id="@+id/v_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFEE" />

        <View
            android:id="@+id/v_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFEE" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlLefts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0fff"
        android:visibility="visible">

    </RelativeLayout>

    <View
        android:id="@+id/vBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99FFFFEE"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_chick_heart"
        android:layout_width="@dimen/p_120dp"
        android:layout_height="@dimen/p_60dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/click_heart" />

    <TextView
        android:id="@+id/tvPiontMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/iv_chick_heart"
        android:layout_alignBottom="@id/iv_chick_heart"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/p_5dp"
        android:layout_marginBottom="@dimen/p_40dp"
        android:text="      这  里  哟"
        android:textColor="#BD1A25"
        android:textSize="@dimen/p_12sp"
        android:textStyle="bold" />

</RelativeLayout>